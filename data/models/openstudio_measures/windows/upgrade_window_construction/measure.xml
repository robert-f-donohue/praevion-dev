  <class_name>UpgradeWindowConstruction</class_name>
  <display_name>Upgrade Window Construction</display_name>
  <description>This measure upgrades window U-values by applying a user-specified U-value (U-0.32, U-0.28, U-0.22, or U-0.18).</description>
  <modeler_description>Creates a new single-layer massless construction and applies it to windows. Uses IP R-value input converted to SI units for simulation.</modeler_description>
  <arguments>
    <argument>
      <name>glazing_choice</name>
      <display_name>Select Target Window Construction</display_name>
      <type>Choice</type>
      <required>true</required>
      <model_dependent>false</model_dependent>
      <default_value>baseline (U-0.59, SHGC-0.40)</default_value>
      <choices>
        <choice>
          <value>baseline (U-0.59, SHGC-0.40)</value>
          <display_name>baseline (U-0.59, SHGC-0.40)</display_name>
        </choice>
        <choice>
          <value>double_clear_lowE (U-0.32, SHGC-0.40)</value>
          <display_name>double_clear_lowE (U-0.32, SHGC-0.40)</display_name>
        </choice>
        <choice>
          <value>double_tinted_lowE (U-0.30, SHGC-0.30)</value>
          <display_name>double_tinted_lowE (U-0.30, SHGC-0.30)</display_name>
        </choice>
        <choice>
          <value>triple_lowE (U-0.20, SHGC-0.25)</value>
          <display_name>triple_lowE (U-0.20, SHGC-0.25)</display_name>
        </choice>
